# -----------------
# Data Sync Settings
# -----------------
# Sync interval in minutes
SYNC_INTERVAL_MINUTES=5
# Number of days to fetch for crew roster (past and future)
ROSTER_DAYS_RANGE=7
# Enable/disable AIMS sync (set to 'false' to use CSV only)
AIMS_SYNC_ENABLED=true

# -----------------
# FTL Limits (Flight Time Limitations)
# -----------------
# 28-day rolling limit in hours
FTL_28DAY_LIMIT=100
# 12-month rolling limit in hours
FTL_12MONTH_LIMIT=1000
# Warning threshold percentage
FTL_WARNING_THRESHOLD=85
# Critical threshold percentage
FTL_CRITICAL_THRESHOLD=95

# -----------------
# Timezone
# -----------------
# Local timezone for display (AIMS data is in UTC)
LOCAL_TIMEZONE=Asia/Ho_Chi_Minh

# -----------------
# Logging
# -----------------
LOG_LEVEL=INFO
LOG_FILE=app.log

